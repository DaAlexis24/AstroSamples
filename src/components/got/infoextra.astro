---
import type{ Char } from '../../types/types';
type Props = {
    character: Char;
}

// Desestructuración de la desestructuración de las props
const {character: {category, reignYears, weapon, adviseTo, serveLevel, skillLevel, servesTo}} = Astro.props;
---


<ul class="list-unstyled">
    <!-- Renderizado condicional -->
    {
        category === 'king' && <li>Años de reinado: {reignYears}</li>
    }
    {
        category === 'fighter' && 
        <li>Arma: {weapon}</li>
        <li>Destreza: {skillLevel}</li>
    }
    {
        category === 'adviser' && 
        <li>Asesora a: {adviseTo?.name + ' ' + adviseTo?.family}</li>
    }
    {
        category === 'squire' && 
        <li>Peloteo: {serveLevel}</li>
        <li>Sirve a: {servesTo?.name + ' ' + servesTo?.family}</li>
    }
</ul>