---
import InfoExtra from './infoextra.astro';
import type{ Char } from '../types/types';

type Props = {
    character: Char;
}

const {character} = Astro.props;

const image = `src/assets/${character.name}.jpg`

---

<li class="character col">
    <div class="card character__card">
      <img
        src={image}
        alt="Nombre y familia del personaje"
        class="character__picture card-img-top"
      />
      <div class="card-body">
        <h2 class="character__name card-title h4">{character.name} {character.family}</h2>
        <div class="character__info">
          <ul class="list-unstyled">
            <li>Edad: X a√±os</li>
            <li>
              Estado:
              {
                character.isAlive
                  ? <i class="fas fa-thumbs-up"></i>
                  : <i class="fas fa-thumbs-down"></i>
              }
            </li>
          </ul>
        </div>
        <div class="character__overlay">
          <InfoExtra character={character}/>
          <div class="character__actions">
            <button class="character__action btn">habla</button>
            <button class="character__action btn">muere</button>
          </div>
        </div>
      </div>
      <i class="emoji"></i>
    </div>
  </li>